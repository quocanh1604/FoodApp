<script>
  function goToProduct() {
    window.location.href = '/product'
  }
  function goToNewProduct() {
    window.location.href = '/product/add-product'
  }
  function goToCategory() {
    window.location.href = '/product/category'
  }
  function goToEdit(_id) {
    window.location.href = '/product/edit-product/' + _id
  }
  function delProduct(_id) {
    $.ajax({
      type: "DELETE",
      url: '/product/delete/' + _id,
      success: function (data) {
        if (data.res == true) {
          window.location.href = '/product'
        }
      }
    });
  }
</script>